{% extends 'base.html.twig' %}
{% block stylesheets %}

<style>
 body {
     background-image: url("image1.jpg"); 
     background-color: #cccccc;
  height: 500px;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;     
</style>
 {% endblock %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

<div class="container" >
    <div class="row justify-content-center" style=" margin: 100px;" >
        <div class="col-md-8">

            <div class="card" style="    background-color: rgba(0, 0, 0, 0.25);">
				<div class="card-header" style="background-color:#1d2327;">				
				<h5 style="color:#f0f6fc" ">Login</h5>
				</div>
		   <div class="card-body">
			<div class="form-group row">
			     <label for="inputEmail"><h5 style="color:#f0f6fc">Email</h5></label>
			     <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-2" autocomplete="email" required autofocus>
			</div>
			<div class="form-group row">
			     <label for="inputPassword"><h5 style="color:#f0f6fc">Password<h5></label>
			     <input type="password" name="password" id="inputPassword" class="form-control my-2" autocomplete="current-password" required>
			</div>
		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{#
						        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						        See https://symfony.com/doc/current/security/remember_me.html
						
						        <div class="checkbox mb-3">
						            <label>
						                <input type="checkbox" name="_remember_me"> Remember me
						            </label>
						        </div>
						    #}

		<button class="btn btn-primary" type="submit">
			Sign in
		</button>
		    </div>
			</div>
    </div>
    </div>
    </div>

	</form>
{% endblock %}
